<!doctype html>
<html>

<head>
  <title>TabOnTab</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>

<body>
  <div class="container">

    <div class="page-header text-center col-sm-6 col-sm-offset-3">
    <img class="top" src="img/logo.png">
      <a href="/logout" class="btn btn-warning btn-sm">Logout</a>
    </div>

    <div class="row">

      <!-- LOCAL INFORMATION -->
      <div class="col-sm-6" hidden="true">
        <div class="well">
          <h3><span class="fa fa-user"></span> Local</h3>

          <% if (user.local.email) { %>
            <p>
              <strong>id</strong>: <%= user._id %><br>
                <strong>email</strong>: <%= user.local.email %><br>
                  <strong>password</strong>: <%= user.local.password %>
            </p>

            <a href="/unlink/local" class="btn btn-default">Unlink</a>
            <% } else { %>
              <a href="/connect/local" class="btn btn-default">Connect Local</a>
              <% } %>

        </div>
      </div>
      <div class="col-sm-6">
        <h3>Tab</h3>
        <div class="row">

          <div class="col-sm-6">
            <form action="/messages" method="POST" class="row justify-content-center mb-4">
              <div class="col-10 mb-3">
                <label for="name">Name</label>
                <input class="form-control" type="text" placeholder="Enter Name" name="name">
              </div>
              <div class="col-10 mb-3">
                <label for="lastName">Amount</label>
                <input class="form-control" type="text" placeholder="How Much They Owe?" name="amount">
              </div>
              <div class="col-8 mb3">
                <button class="btn btn-success add-btn" type="submit">Add To Tab</button>
              </div>
            </form>
          </div>

          <div class="col-sm-10">
            <div class="col-10 mt-10">
              <table class="table table-striped table-dark" id="tab-table">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Amount</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody class="peoples-list">
                  <% for(var i=0; i<messages.length; i++) { %>
                    <tr class="tabla">
                      <td contenteditable="true" class="<%= messages[i].name %>"><%= messages[i].name %></td>
                      <td contenteditable="true" class="amount"><%= messages[i].amount %></td>
                      <td>
                        <a href="" class="btn-warning btn sm-delete">Delete</a>
                      </td>
                    </tr>
                    <% } %>
                </tbody>
              </table>
              <button class="btn btn-success total" id="generate-invoice">Generate Total</button>
              <p id="total"> Total: $<%=tab%></p>
            </div>
          </div>

        </div>

      </div>

      <script src="main.js"></script>

</body>

</html>